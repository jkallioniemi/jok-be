{
  "name": "jok-be",
  "version": "1.0.0",
  "description": "Simple jok-be for having less fun than you would have with duck-be",
  "author": "Juuso Kallioniemi",
  "main": "src/server.js",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.4",
    "yarn": "*"
  },
  "scripts": {
    "create-db": "createdb -U postgres jok-be && yarn migrate && yarn seed",
    "recreate-db": "dropdb -U postgres jok-be && SUPERUSER=${SUPERUSER:-postgres} yarn create-db",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "dev": "nodemon ./src/server.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test mocha --timeout 20000 --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "docs": "apidoc -i src -o docs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:danielfsousa/express-rest-es2017-boilerplate.git"
  },
  "keywords": [
    "express",
    "node.js",
    "es6"
  ],
  "dependencies": {
    "apidoc": "^0.17.6",
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^4.0.4",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "knex": "^0.14.3",
    "lodash": "^4.17.5",
    "method-override": "^2.3.8",
    "moment-timezone": "^0.5.13",
    "morgan": "^1.8.1",
    "objection": "^1.0.0",
    "pg": "^7.4.1",
    "pm2": "^2.4.6",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.10.0",
    "supertest": "^3.0.0"
  }
}
